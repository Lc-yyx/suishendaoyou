/* pages/myBooks/myBooks.wxss */

/*页面样式*/
page {
  height: 100%;
  width: 100%;
  background-color: #0000;
}

/*跟视图样式*/
.mainViewClass {
  width: 100%;
  height: 100%;
  font-family: "Microsoft YaHei";
}


/*用户头像模块样式*/
.userAvatar {
  display: flex;
  margin-top: 28rpx;
  padding: 50rpx;
  background-color: #ffffff;
  
}

/*用户头像*/
.userAvatar image {
  width: 400rpx;
  height: 200rpx;
  border-radius: 5rpx;
  border: 1rpx solid ;
}

/*头像布局*/
.userAvatar view {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}

/*用户名字*/
.userAvatar .nickName {
  font-size: 50rpx;
  margin-bottom: 12rpx;
  font-weight: bold;
}


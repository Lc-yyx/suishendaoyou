}


/*我收藏的书籍 栏目样式*/
.booksList {
  margin-top: 32rpx;
  padding: 16rpx 48rpx 30rpx 48rpx;
  background-color: #fff;
  border: 2rpx solid ;
  min-height: 999rpx;
}

/*顶部标题模块样式*/
.signsList .top-bar {
  display: flex;
  align-items: flex-end;
  padding: 16rpx 0;
  border-bottom: 2rpx solid ;
}

/*心 图片样式*/
.signsList .top-bar image {
  width: 48rpx;
  height: 48rpx;
}

/*我收藏的书籍  文本样式*/
.signsList .top-bar text {
  font-size: 32rpx;
  padding-left: 20rpx;
  color: #525252;
}

/*未收藏 提示 图片和文本的样式*/
.signsList .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.signsList .empty image {
  margin: 40rpx;
  width: 180rpx;
  height: 180rpx;
}

.signsList .empty text {
  font-size: 36rpx;
  font-weight: bold;
  color: #dfdfdf;
}